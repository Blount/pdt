-Dosgi.requiredJavaVersion=1.5
-Xms40m
-Xmx256m</eclipseIniFileContent>
		</platform>
		<platform os="linux" ws="gtk" arch="x86">
			<archiveFormat format="tar" />
			<eclipseIniFileContent path="/eclipse/">-showsplash
