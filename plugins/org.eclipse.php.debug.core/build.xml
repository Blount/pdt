				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.core.variables_3.1.0.jar"/>
				<pathelement path="${build.result.folder}/../org.eclipse.php.core/bin/"/>
				<pathelement path="${build.result.folder}/../org.eclipse.php.core/@dot"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui_3.1.2.jar"/>
