				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem.proxy_1.1.0.1/remotecommon.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem.proxy_1.1.0.1/proxyide.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jdt.launching_3.1.0.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jdt.core_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.team.core_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jdt.debug_3.1.1/jdi.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jdt.debug_3.1.1/jdimodel.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jdt.debug_3.1.1/tools.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.pde.core_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.ide_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.views_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.update.ui_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.forms_3.1.0.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.debug.ui_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.console_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jface.text_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.workbench.texteditor_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.editors_3.1.1.jar"/>
				<pathelement path="${build.result.folder}/../org.eclipse.php.server.apache.core/bin/"/>
				<pathelement path="${build.result.folder}/../org.eclipse.php.server.apache.core/@dot"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.server.ui_1.0.2.v20060402.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.ui.browser_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.internet.monitor.core_1.0.0.v20060312.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.sse.ui_1.0.1.v200602041933.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.search_3.1.2.jar"/>
			</classpath>
			<src path="src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/@dot.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<copy todir="${build.result.folder}/@dot" failonerror="true" overwrite="false">
			<fileset dir="${temp.folder}/@dot.bin"			/>
		</copy>
		<delete dir="${temp.folder}/@dot.bin"/>
	</target>

	<target name="src.zip" depends="init" unless="src.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/src.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: org.eclipse.php.debug.core.">
		<available property="@dot" file="${build.result.folder}/@dot"/>
		<antcall target="@dot"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="src.zip" file="${build.result.folder}/src.zip"/>
		<antcall target="src.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}"/>
		<copy todir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}/@dot" includes="**"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="META-INF/,null,plugin.xml,.options,schema/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}"/>
		<copy file="${build.result.folder}/src.zip" todir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}" failonerror="false" overwrite="false"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}"/>
		<copy file="${temp.folder}/@dot.bin.log" todir="${destination.temp.folder}/org.eclipse.php.debug.core_${VERSION}" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.eclipse.php.debug.core of all the zips, jars and logs created.">
		<delete dir="${build.result.folder}/@dot"/>
		<delete file="${build.result.folder}/src.zip"/>
		<delete file="${plugin.destination}/org.eclipse.php.debug.core_${VERSION}.jar"/>
		<delete file="${plugin.destination}/org.eclipse.php.debug.core_${VERSION}.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="c:/development/PHPIDE/org.eclipse.php.debug.core" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.eclipse.php.debug.core.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/org.eclipse.php.debug.core_${VERSION}.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
