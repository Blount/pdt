				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.css.core_1.0.0.v200602062135.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.xml.core_1.0.2.v200604050855.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.apache.xerces_2.7.0.v200602052214/resolver.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.apache.xerces_2.7.0.v200602052214/xercesImpl.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.apache.xerces_2.7.0.v200602052214/xml-apis.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.validation_1.0.1.v200602070050.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.common.frameworks_1.0.1.v200602070050.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem.util_1.1.0.1/util.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.emf.ecore_2.1.0.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.emf.ecore.xmi_2.1.0.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.common.environment_1.0.0.v200602151541.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.osgi.util_3.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.emf.ecore.edit_2.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.emf.edit_2.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.common.emf_1.0.1.v200604190008.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.common.emfworkbench.integration_1.0.1.v200604190008.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.xsd_2.1.1.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.common.project.facet.core_1.0.1.v200603242204.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.wst.server.core_1.0.2.v20060406.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.debug.core_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.update.core_3.1.2.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.update.core.${BUILD_OS}_3.1.0.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem_1.1.0.1/javainst.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem_1.1.0.1/mofjava.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem.proxy_1.1.0.1/proxy.jar"/>
				<pathelement path="${ECLIPSE_HOME}/plugins/org.eclipse.jem.proxy_1.1.0.1/proxycommon.jar"/>
