<project name="Builds all parser classes" default="main">
	
	<target name="main">
		<dirname property="antfile.dir" file="${ant.file}"/>
		
		<!-- PHP 4 -->
		<ant dir="${antfile.dir}/parser/php4/" antfile="genereteAstParser.xml" />
		<ant dir="${antfile.dir}/parser/php4/" antfile="genereteAstScanner.xml" />
		<ant dir="${antfile.dir}/parser/php4/" antfile="genereteCompilerAstParser.xml" />
		
		<!-- PHP 5 -->
		<ant dir="${antfile.dir}/parser/php5/" antfile="genereteAstParser.xml" />
		<ant dir="${antfile.dir}/parser/php5/" antfile="genereteAstScanner.xml" />
		<ant dir="${antfile.dir}/parser/php5/" antfile="genereteCompilerAstParser.xml" />
		
		<!-- PHPDoc Lexer -->
		<ant dir="${antfile.dir}/parser/phpdoc/" antfile="genereteCompilerScanner.xml" />
		
		<!-- Highlighting Lexer -->
		<ant dir="${antfile.dir}/highlighting/" antfile="generetePhpLexer4.xml" />
		<ant dir="${antfile.dir}/highlighting/" antfile="generetePhpLexer5.xml" />
		<ant dir="${antfile.dir}/highlighting/" antfile="generetePHPTokenizer.xml" />
		
	</target>
	
</project>