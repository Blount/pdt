<project name="Generating highlighting scanner for PHP 5.3" default="generateScanner" basedir=".">

	<target name="checkUpToDate">
		<uptodate
			property="upToDate"
			srcfile="highlighting_scanner.jflex"
			targetfile="../../../../src/org/eclipse/php/internal/core/documentModel/parser/php53/PhpLexer.java" />
	</target>

	<target name="generateScanner" depends="checkUpToDate" unless="upToDate">
		<java jar="../../JFlex-1.4.1/JFlex.jar" fork="true">
			<arg value="-d" />
			<arg value="../../../../src/org/eclipse/php/internal/core/documentModel/parser/php53" />
			<arg value="-nobak" />
			<arg value="highlighting_scanner.jflex" />
		</java>
	</target>
	
</project>